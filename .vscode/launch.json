{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome - Host (Left)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "chrome",
      "args": [
        "--web-browser-flag=--user-data-dir=/tmp/chrome-host"
      ]
    },
    {
      "name": "Chrome - Guest (Right)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "chrome",
      "args": [
        "--web-browser-flag=--user-data-dir=/tmp/chrome-guest"
      ]
    },
    {
      "name": "Android (Auto-start Emulator)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "flutterMode": "debug"
    }
  ],
  "compounds": [
    {
      "name": "Dual Browser Test (Host + Guest)",
      "configurations": [
        "Chrome - Host (Left)",
        "Chrome - Guest (Right)"
      ],
      "stopAll": true
    },
    {
      "name": "Multi-Device (Web + Android)",
      "configurations": [
        "Chrome - Host (Left)",
        "Android (Auto-start Emulator)"
      ],
      "stopAll": true
    }
  ]
}
